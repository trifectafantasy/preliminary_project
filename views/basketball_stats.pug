html
	head
		title= "Roster Stats"
		link(rel="icon", type="image/x-icon", href="/images/trifectalogo.ico")
		include ./JADE-Bootstrap/_bootstrap
		include mixins.pug
		link(rel='stylesheet', type="text/css", href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		link(rel='stylesheet', type="text/css", href='/css/styles.css')

	body
		header
			+headliner

					
		if owner === 'all'
			h2= "Leaguewide " + year + " Basketball Roster Stats"
		else
			h2= owner + "'s " + year + " Basketball Roster Stats"

		p Formula for Weighted PR = PR x GP

		if year == 2016
			p NOTE: Includes stats accumulated after fantasy regular season and playoffs concluded
		
		table
			thead
				tr
					th RANK
					th PLAYER
					th WEIGHTED PR
					th PR
					th GP
					th FG
					th FG %
					th FT
					th FT %
					th 3PM
					th REB
					th AST
					th STL
					th BLK
					th TO
					th PTS
					if owner === "all"
						th OWNER

			tbody
				each readin, rank in acquisitions
					tr
						td= rank + 1
						each val, cat in readin
							if cat === "player"
								td= val
							if cat === "weighted_PR"
								td= parseFloat(val).toFixed(2)
							if cat === "PR"
								td= parseFloat(val).toFixed(2)
							if cat === 'GP'
								td= val
							if cat === 'FG'
								td= val
							if cat === 'FG_PCT'
								td= parseFloat(val).toFixed(3)
							if cat === 'FT'
								td= val
							if cat === 'FT_PCT'
								td= parseFloat(val).toFixed(3)
							if cat === 'THREEPM'
								td= val
							if cat === 'REB'
								td= val
							if cat === 'AST'
								td= val
							if cat === 'STL'
								td= val
							if cat === 'BLK'
								td= val
							if cat === 'TO'
								td= val
							if cat === 'PTS'
								td= val
							if owner === 'all'
								if cat === 'owner'
									td= val					

