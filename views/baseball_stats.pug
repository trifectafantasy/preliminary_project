html
	head
		title= "Roster Stats"
		include ./JADE-Bootstrap/_bootstrap
		include mixins.pug
		link(rel='stylesheet', type="text/css", href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		link(rel='stylesheet', type="text/css", href='/css/styles.css')

	body
		header
			+headliner

					
		if owner === 'all'
			h2= "Leaguewide " + year + " Baseball Roster Stats"
		else
			h2= owner + "'s " + year + " Baseball Roster Stats"

		p Formula for Weighted PR
		p Hitters: Weighted PR = PR * GP
		p Pitchers: Weighted PR = PR * IP / 2 

		if year == 2016
			p NOTE: Includes stats accumulated after fantasy regular season and playoffs concluded

		table
			thead
				tr
					th RANK
					th PLAYER
					th POSITION
					th WEIGHTED PR
					th PR
					th GP
					th AB
					th H
					th R
					th HR
					th RBI
					th BB
					th K
					th SB
					th OBP
					th IP
					th H
					th BB
					th K
					th QS
					th W
					th SV
					th ERA
					th WHIP
					if owner === "all"
						th OWNER

			tbody
				each readin, rank in acquisitions
					tr
						td= rank + 1
						each val, cat in readin

							if readin["hit_or_pit"] == 'Hitter'

								if cat === "player"
									td= val
								if cat === "hit_or_pit"
									td= val
								if cat === "weighted_PR"
									td= parseFloat(val).toFixed(2)
								if cat === "PR"
									td= parseFloat(val).toFixed(2)

								if cat === 'GP'
									td= val
								if cat === 'AB'
									td= val
								if cat === 'H'
									td= val
								if cat === 'R'
									td= val
								if cat === 'HR'
									td= val
								if cat === 'RBI'
									td= val
								if cat === 'BB'
									td= val
								if cat === 'SO'
									td= val
								if cat === 'SB'
									td= val
								if cat === 'OBP'
									td= parseFloat(val).toFixed(3)
									td
									td
									td
									td
									td
									td
									td
									td
									td
								if owner === 'all'
									if cat === 'owner'
										td= val					

							else if readin["hit_or_pit"] == 'Pitcher'

								if cat === "player"
									td= val
								if cat === "hit_or_pit"
									td= val
								if cat === "weighted_PR"
									td= parseFloat(val).toFixed(2)
								if cat === "PR"
									td= parseFloat(val).toFixed(2)
								if cat === 'IP'
									td 
