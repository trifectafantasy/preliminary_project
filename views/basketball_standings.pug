html
	head
		title= year + " Basketball Standings"
		link(rel="icon", type="image/x-icon", href="/images/trifectalogo.ico")
		include ./JADE-Bootstrap/_bootstrap
		include mixins.pug
		link(rel='stylesheet', type="text/css", href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		link(rel='stylesheet', type="text/css", href='/css/styles.css')

	body
		header
			+headliner
					

		h2= year + " Basketball Standings"

		if playoffs === true

			h4= "Trifecta Standings"
			p= "NOTE: Roto is not taken into consideration for total trifecta points"
			table
				thead
					tr
						th TEAM
						th REGULAR SEASON TRIFECTA POINTS
						th PLAYOFF TRIFECTA POINTS
						th TOTAL TRIFECTA POINTS

				tbody
					each readin2 in trifecta_standings
						tr
							each val,cat in readin2
								if cat === "team"
									td= val
								if cat === "season_trifecta_points"
									td= val
								if cat === "playoff_trifecta_points"
									td= val
								if cat === "total_trifecta_points"
									td= val

			h4= "Head to Head Standings"
			table
				thead
					tr
						th TEAM
						th WINS
						th LOSSES
						th TIES
						th WIN %
						th DIVISION
						th TRIFECTA POINTS
				tbody
					each readin in h2h_standings
						tr
							each val, cat in readin
								if cat === "team"
									td= val
								if cat === "wins"
									td= val
								if cat === "losses"
									td= val
								if cat === "ties"
									td= val
								if cat === "win_per"
									td= parseFloat(val).toFixed(3)
								if cat === "division"
									td= val
								if cat === "h2h_trifecta_points"
									td= val

			h4= "Roto Standings"
			table
				thead
					tr
						th TEAM
						th FG%
						th FT%
						th 3PM
						th REB
						th AST
						th STL
						th BLK 
						th TO
						th PTS
						th TOTAL ROTO POINTS
				tbody
					each next in roto_standings
						tr
							each val, cat in next
								if cat === "team"
									td= val
								if cat === "FG_PCT"
									td= parseFloat(val).toFixed(4)
								if cat === "FT_PCT"
									td= parseFloat(val).toFixed(4)
								if cat === "THREEPM"
									td= val
								if cat === "REB"
									td= val
								if cat === "AST"
									td= val
								if cat === "STL"
									td= val
								if cat === "BLK"
									td= val
								if cat === "TO"
									td= val
								if cat === "PTS"
									td= val
								if cat === "total_roto_points"
									td= val
			

		else

			h4= "Head to Head Standings"
			table
				thead
					tr
						th TEAM
						th WINS
						th LOSSES
						th TIES
						th WIN %
						th DIVISION
						th TRIFECTA POINTS
				tbody
					each readin in h2h_standings
						tr
							each val, cat in readin
								if cat === "team"
									td= val
								if cat === "wins"
									td= val
								if cat === "losses"
									td= val
								if cat === "ties"
									td= val
								if cat === "win_per"
									td= parseFloat(val).toFixed(3)
								if cat === "division"
									td= val
								if cat === "h2h_trifecta_points"
									td= val

			h4= "Roto Standings"
			p= "NOTE: Roto not taken into consideration for total trifecta points, just for reference"
			table
				thead
					tr
						th TEAM
						th FG%
						th FT%
						th 3PM
						th REB
						th AST
						th STL
						th BLK 
						th TO
						th PTS
						th TOTAL ROTO POINTS
				tbody
					each next in roto_standings
						tr
							each val, cat in next
								if cat === "team"
									td= val
								if cat === "FG_PCT"
									td= parseFloat(val).toFixed(4)
								if cat === "FT_PCT"
									td= parseFloat(val).toFixed(4)
								if cat === "THREEPM"
									td= val
								if cat === "REB"
									td= val
								if cat === "AST"
									td= val
								if cat === "STL"
									td= val
								if cat === "BLK"
									td= val
								if cat === "TO"
									td= val
								if cat === "PTS"
									td= val
								if cat === "total_roto_points"
									td= val
