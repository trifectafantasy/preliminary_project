html
	head
		title= year + " Basketball Standings"
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		link(rel='stylesheet', href='/css/styles.css')

	body
		header
			navbar
				a(href= '/' class = 'navbar') Home Page
				a(href= '/standings_home_page/2015/2016' class = 'navbar') 2015-2016 Standings
				a(href= '/standings_home_page/2016/2017' class = 'navbar') 2016-2017 Standings
				a(href= '/owner_matchup_home_page' class = 'navbar') Owner 2 Owner Matchup Records
				a(href= '/trades_home_page' class = 'navbar') Trade Analysis
				a(href= '/acquisition_value_home_page' class = 'navbar') Acquisition Value
				a(href= '/origin_home_page' class = 'navbar') Origin Analysis
				a(href= '/football_coach_home_page' class = 'navbar') Football Coach  


		h2= year + " Basketball Standings"

		if playoffs

			h4= "Trifecta Standings"
			p= "NOTE: In " + year + ", roto was not taken into consideration for total trifecta points"
			table
				thead
					tr
						th TEAM
						th REGULAR SEASON TRIFECTA POINTS
						th PLAYOFF TRIFECTA POINTS
						th TOTAL TRIFECTA POINTS

				tbody
					each readin2 in trifecta_standings
						tr
							each val,cat in readin2
								if cat === "team"
									td= val
								if cat === "season_trifecta_points"
									td= val
								if cat === "playoff_trifecta_points"
									td= val
								if cat === "total_trifecta_points"
									td= val

			h4= "Head to Head Standings"
			table
				thead
					tr
						th TEAM
						th WINS
						th LOSSES
						th TIES
						th WIN %
						th DIVISION
						th H2H TRIFECTA POINTS
				tbody
					each readin in h2h_standings
						tr
							each val, cat in readin
								if cat === "team"
									td= val
								if cat === "wins"
									td= val
								if cat === "losses"
									td= val
								if cat === "ties"
									td= val
								if cat === "win_per"
									td= parseFloat(val).toFixed(3)
								if cat === "division"
									td= val
								if cat === "h2h_trifecta_points"
									td= val

			h4= "Roto Standings"
			table
				thead
					tr
						th TEAM
						th FG%
						th FT%
						th 3PM
						th REB
						th AST
						th STL
						th BLK 
						th TO
						th PTS
						th TOTAL ROTO POINTS
						th ROTO TRIFECTA POINTS
				tbody
					each next in roto_standings
						tr
							each val, cat in next
								if cat === "team"
									td= val
								if cat === "FG_PCT"
									td= parseFloat(val).toFixed(4)
								if cat === "FT_PCT"
									td= parseFloat(val).toFixed(4)
								if cat === "THREEPM"
									td= val
								if cat === "REB"
									td= val
								if cat === "AST"
									td= val
								if cat === "STL"
									td= val
								if cat === "BLK"
									td= val
								if cat === "TO"
									td= val
								if cat === "PTS"
									td= val
								if cat === "total_roto_points"
									td= val
								if cat === "roto_trifecta_points"
									td= val			
			

		else

			h4= "Head to Head Standings"
			table
				thead
					tr
						th TEAM
						th WINS
						th LOSSES
						th TIES
						th WIN %
						th DIVISION
						th H2H TRIFECTA POINTS
				tbody
					each readin in h2h_standings
						tr
							each val, cat in readin
								if cat === "team"
									td= val
								if cat === "wins"
									td= val
								if cat === "losses"
									td= val
								if cat === "ties"
									td= val
								if cat === "win_per"
									td= parseFloat(val).toFixed(3)
								if cat === "division"
									td= val
								if cat === "h2h_trifecta_points"
									td= val

			h4= "Roto Standings"
			p= "NOTE: In " + year + ", roto was not taken into consideration for total trifecta points"
			table
				thead
					tr
						th TEAM
						th FG%
						th FT%
						th 3PM
						th REB
						th AST
						th STL
						th BLK 
						th TO
						th PTS
						th TOTAL ROTO POINTS
						th ROTO TRIFECTA POINTS
				tbody
					each next in roto_standings
						tr
							each val, cat in next
								if cat === "team"
									td= val
								if cat === "FG_PCT"
