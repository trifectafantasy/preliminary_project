html
	head
		title= "Roster Stats"
		link(rel="icon", type="image/x-icon", href="/images/trifectalogo.ico")
		include ./JADE-Bootstrap/_bootstrap
		include mixins.pug
		link(rel='stylesheet', type="text/css", href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		link(rel='stylesheet', type="text/css", href='/css/styles.css')

	body
		header
			+headliner

					
		if owner === 'all'
			h2= "Leaguewide " + year + " Football Roster Stats"
		else
			h2= owner + "'s " + year + " Football Roster Stats"	

		if year == 2016
			p NOTE: Includes stats accumulated after fantasy regular season and playoffs concluded			

		table
			thead
				tr
					th RANK
					th PLAYER
					th PTS
					th PASS
					th PASS YDS
					th PASS TD
					th PASS INT
					th RUSH
					th RUSH YDS
					th RUSH TD
					th REC
					th REC YDS
					th REC TD
					th REC TAR
					th MISC FUML
					th MISC TD
					if owner === 'all'
						th OWNER

			tbody
				each readin, rank in acquisitions
					tr
						td= rank + 1
						each val, cat in readin
							if cat === "player"
								td= val
							if cat === "PTS"
								td= parseFloat(val).toFixed(1)
							if cat === 'PASS'
								td= val
							if cat === 'PASS_YDS'
								td= val
							if cat === 'PASS_TD'
								td= val
							if cat === 'PASS_INT'
								td= val
							if cat === 'RUSH'
								td= val
							if cat === 'RUSH_YDS'
								td= val
							if cat === 'RUSH_TD'
								td= val
							if cat === 'REC'
								td= val
							if cat === 'REC_YDS'
								td= val
							if cat === 'REC_TD'
								td= val
							if cat === 'REC_TAR'
								td= val
							if cat === 'MISC_FUML'
								td= val
							if cat === 'MISC_TD'
								td= val
							if owner === 'all'
								if cat === 'owner'
									td= val