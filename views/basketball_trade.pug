html
	head
		title= "Trade Analysis"
		link(rel="icon", type="image/x-icon", href="/images/trifectalogo.ico")
		include ./JADE-Bootstrap/_bootstrap
		include mixins.pug
		link(rel='stylesheet', type="text/css", href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		link(rel='stylesheet', type="text/css", href='/css/styles.css')

		script(type="text/javascript").

			$(window).on('beforeunload', function() {
				$(".loader").fadeIn("slow");
				//console.log("UNLOAD");
			})

			$(window).load(function() {
				$(".loader").fadeOut("slow");
				//console.log("LOAD");
			})

	body
		div.loader
		header
			+headliner

					
		h2= year + " Basketball Trade Analysis"
		
		if year == 2016
			p NOTE: Includes stats accumulated after fantasy regular season and playoffs concluded		
		
		table
			thead
				tr
					th TRADE NUMBER
					th OWNER
					th PLAYER
					th GP
					th FG
					th FG %
					th FT
					th FT %
					th 3PM
					th REB
					th AST
					th STL
					th BLK
					th TO
					th PTS

			tbody
				each readin in trader
					tr
						each val, cat in readin
							if cat === "trade_number"
								td= val						
							if cat === "owner"
								td= val
							if cat === "player"
								if val === "zzTotal"
									td= val.slice(2)
								else
									td= val								
							if cat === "GP"
								td= val
							if cat === "FG"
								td= val
							if cat === "FG_PCT"
								td= parseFloat(val).toFixed(4)
							if cat === "FT"
								td= val
							if cat === "FT_PCT"
								td= parseFloat(val).toFixed(4)
							if cat === "THREEPM"
								td= val
							if cat === "REB"
								td= val
							if cat === "AST"
								td= val
							if cat === "STL"
								td= val
							if cat === "BLK"
								td= val
							if cat === "TO"
								td= val
							if cat === "PTS"
								td= val
