html
	head
		title= year + " Football Standings"
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		link(rel='stylesheet', href='/css/styles.css')

	body
		header
			navbar
				a(href= '/' class = 'navbar') Home Page
				a(href= '/football_standings/2015' class = 'navbar') 2015 Football Standings
				a(href= '/basketball_standings/2016' class = 'navbar') 2016 Basketball Standings
				a(href= '/baseball_standings/2016' class = 'navbar') 2016 Baseball Standings
				a(href= '/trifecta_standings/2015/2016' class = 'navbar') 2015-2016 Trifecta Season Standings
				a(href= '/football_standings/2016' class = 'navbar') 2016 Football Standings
				a(href= '/basketball_standings/2017' class = 'navbar') 2017 Basketball Standings
				a(href= '/trifecta_standings/2016/2017' class = 'navbar') 2016-2017 Trifecta Season Standings
				a(href= '/owner_matchup_home_page' class = 'navbar') Owner 2 Owner Matchup Records

				
		h2= year + " Football Standings"

		h4= "Trifecta Standings"
		table
			thead
				tr
					th TEAM
					th REGULAR SEASON TRIFECTA POINTS
					th PLAYOFF TRIFECTA POINTS
					th TOTAL TRIFECTA POINTS

			tbody
				each readin2 in trifecta_standings
					tr
						each val,cat in readin2
							if cat === "team"
								td= val
							if cat === "season_trifecta_points"
								td= val
							if cat === "playoff_trifecta_points"
								td= val
							if cat === "total_trifecta_points"
								td= val

		h4= "Head to Head Standings"
		table
			thead
				tr
					th TEAM
					th WINS
					th LOSSES
					th TIES
					th WIN %
					th DIVISION
					th POINTS FOR
					th POINTS AGAINST
					th TRIFECTA POINTS
			tbody
				each readin in h2h_standings
					tr
						each val, cat in readin
							if cat === "team"
								td= val
							if cat === "wins"
								td= val
							if cat === "losses"
								td= val
							if cat === "ties"
								td= val
							if cat === "win_per"
								td= parseFloat(val).toFixed(3)
							if cat === "division"
								td= val
							if cat === "PF"
								td= parseFloat(val).toFixed(1)
							if cat === "PA"
								td= parseFloat(val).toFixed(1)
							if cat === "trifecta_points"
								td= val
