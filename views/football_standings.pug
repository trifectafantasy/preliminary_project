html
	head
		title= year + " Football Standings"
		link(rel="icon", type="image/x-icon", href="/images/trifectalogo.ico")
		include ./JADE-Bootstrap/_bootstrap
		include mixins.pug
		link(rel='stylesheet', type="text/css", href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		link(rel='stylesheet', type="text/css", href='/css/styles.css')

		script(type="text/javascript").

			$(window).on('beforeunload', function() {
				$(".loader").fadeIn("slow");
				//console.log("UNLOAD");
			})

			$(window).load(function() {
				$(".loader").fadeOut("slow");
				//console.log("LOAD");
			})

	body
		div.loader
		header
			+headliner

									
		h2= year + " Football Standings"

		if playoffs === true

			h4= "Trifecta Standings"
			table
				thead
					tr
						th TEAM
						th REGULAR SEASON TRIFECTA POINTS
						th PLAYOFF TRIFECTA POINTS
						th TOTAL TRIFECTA POINTS

				tbody
					each readin2 in trifecta_standings
						tr
							each val,cat in readin2
								if cat === "team"
									td= val
								if cat === "season_trifecta_points"
									td= val
								if cat === "playoff_trifecta_points"
									td= val
								if cat === "total_trifecta_points"
									td= val

			h4= "Head to Head Standings"
			table
				thead
					tr
						th TEAM
						th WINS
						th LOSSES
						th TIES
						th WIN %
						th DIVISION
						th POINTS FOR
						th POINTS AGAINST
						th TRIFECTA POINTS
				tbody
					each readin in h2h_standings
						tr
							each val, cat in readin
								if cat === "team"
									td= val
								if cat === "wins"
									td= val
								if cat === "losses"
									td= val
								if cat === "ties"
									td= val
								if cat === "win_per"
									td= parseFloat(val).toFixed(3)
								if cat === "division"
									td= val
								if cat === "PF"
									td= parseFloat(val).toFixed(1)
								if cat === "PA"
									td= parseFloat(val).toFixed(1)
								if cat === "trifecta_points"
									td= val

		else

			h4= "Head to Head Standings"
			table
				thead
					tr
						th TEAM
						th WINS
						th LOSSES
						th TIES
						th WIN %
						th DIVISION
						th POINTS FOR
						th POINTS AGAINST
						th TRIFECTA POINTS
				tbody
					each readin in h2h_standings
						tr
							each val, cat in readin
								if cat === "team"
									td= val
								if cat === "wins"
									td= val
								if cat === "losses"
									td= val
								if cat === "ties"
									td= val
								if cat === "win_per"
									td= parseFloat(val).toFixed(3)
								if cat === "division"
									td= val
								if cat === "PF"
									td= parseFloat(val).toFixed(1)
								if cat === "PA"
									td= parseFloat(val).toFixed(1)
								if cat === "trifecta_points"
									td= val
