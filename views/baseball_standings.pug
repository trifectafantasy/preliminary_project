html
	head
		title= "Trifecta Fantasy Home Page"
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		link(rel='stylesheet', href='/css/styles.css')

	body
		header
			navbar
				a(href= '/' class = 'navbar') Home Page
				a(href= '/baseball_standings' class = 'navbar') Baseball Standings
				a(href= '/basketball_standings' class = 'navbar') Basketball Standings
		

		h2= "2016 Baseball Standings"


		h4= "Head to Head Standings"
		table
			thead
				tr
					th TEAM
					th WINS
					th LOSSES
					th TIES
					th WIN %
					th DIVISION
					th TRIFECTA H2H POINTS
			tbody
				each readin in h2h_standings
					tr
						each val, cat in readin
							if cat === "team"
								td= val
							if cat === "wins"
								td= val
							if cat === "losses"
								td= val
							if cat === "ties"
								td= val
							if cat === "win_per"
								td= val
							if cat === "division"
								td= val
							if cat === "h2h_trifecta_points"
								td= val

		h4= "Roto Standings"
		table
			thead
				tr
					th TEAM
					th R
					th HR
					th RBI
					th SO
					th SB
					th OBP
					th K 
					th QS
					th W
					th SV
					th ERA
					th WHIP
					th TOTAL ROTO POINTS
					th TRIFECTA ROTO POINTS
			tbody
				each next in roto_standings
					tr
						each val, cat in next
							if cat === "team"
								td= val
							if cat === "R"
								td= val
							if cat === "HR"
								td= val
							if cat === "RBI"
								td= val
							if cat === "SO"
								td= val
							if cat === "SB"
								td= val
							if cat === "OBP"
								td= val
							if cat === "K"
								td= val
							if cat === "QS"
								td= val
							if cat === "W"
								td= val
							if cat === "SV"
								td= val
							if cat === "ERA"
								td= val
							if cat === "WHIP"
								td= val
							if cat === "total_roto_points"
								td= val
							if cat === "roto_trifecta_points"
								td= val													